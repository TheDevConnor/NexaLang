--variables&constants

have "std";

fun main() {
    set name; --declares a variable
    name = "John"; --initializing  the variable
    set age: int = 23; --delares and initializing  a variable

    writeln("Hello my name is $name I am $age");

    const PI: float = 3.14; --it is required to delare the type for a constant

    writeln("$PI");
}
